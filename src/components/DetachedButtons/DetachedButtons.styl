/**
 * DetachedButton
 */

.container
	position absolute
	bottom 0
	left 0
	display flex

button.button

	&
	&:hover
	&:focus
		background var(--primary_color)
		color var(--color_over_primary_color)
		fill currentColor
		display flex
		align-items center
		font-size 0.9em
		letter-spacing .03em
		font-weight 500
		padding .5em 1em
		padding-left .5em
		text-transform uppercase

	svg
		margin-right .3em

.button + button.button

	&
	&:hover
		border-left 2px solid var(--detached_bordercolor)
