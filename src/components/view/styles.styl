/**
 * View
 */

.container
	--e_standard cubic-bezier(0.4, 0.0, 0.2, 1)
	--e_deceleration cubic-bezier(0.0, 0.0, 0.2, 1)
	background-color var(--background_color)
	color var(--color)
	fill var(--svg_color)
	height 100%
	width 100%
	display flex
	flex-direction column

	*
		user-select none // TODO

.tabs
	display flex
	height 50px
	position sticky
	top 0
	z-index 10
	background-color var(--background_color)
