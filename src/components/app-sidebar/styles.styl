/**
 * AppSidebar
 */

.container
	--e_standard cubic-bezier(0.4, 0.0, 0.2, 1)
	--e_deceleration cubic-bezier(0.0, 0.0, 0.2, 1)
	background-color var(--background_color)
	color var(--color)
	fill var(--svg_color)
	height 100%
	width 100%
	display flex
	flex-direction column

	*
		user-select none

.tabs
	display flex
	height 50px
	background-color var(--background_color)
