/**
 * DetachedButton
 */

button.container

	&
	&:hover
	&:focus
		position absolute
		bottom 0
		left 0
		background var(--primary_color)
		color var(--color_over_primary_color)
		fill currentColor
		display flex
		align-items center
		font-size 0.95em
		font-weight 500
		padding .5em .7em .5em .3em
		text-transform uppercase

	svg
		margin-right .3em
