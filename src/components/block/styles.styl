/**
 * Block
 */

.container
	height 4em
	width 100%
	position absolute
	top 0
	left 0

.content
	width 100%
	height 100%
	display flex
	background-color var(--background_color)
	padding-left 1em
	position relative
	transition transform .3s .05s var(--e_deceleration)
	pointer-events none
	z-index 1
	border-left 1px solid var(--secondary_color)

	.level-0 &
		border-left none

	&:after
		content ""
		width 100%
		height 1px
		position absolute
		top 0
		left 0
		border-top 1px dashed transparent
		transition border-color .1s var(--e_deceleration)

	&:before
		content normal
		width 100%
		height 100%
		background-color var(--background_color)
		position absolute
		top 0
		right calc(100% + 1px)

	.level-0 &:before
		right 100%

for num in (1..20)

	margin = num > 3 ? 1 : 1.5
	prev_margin = num > 3 ? 1.5 : 0

	.level-{num}
		left (num * margin + prev_margin)em
