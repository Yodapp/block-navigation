/**
 * Block
 */

.container
	height 4em
	position absolute
	top 0
	left 0
	right 0
	display flex

	&.is_detached
		height 3em

.content
	width 100%
	height 100%
	display flex
	background-color var(--background_color)
	position relative
	z-index 1
	border-left 1px solid var(--secondary_color)
	padding-left 1em

	.is_detached &
		padding-left .5em

	.level-0 &
		border-left none

for num in (1..20)

	margin = num > 3 ? 1 : 1.5
	prev_margin = num > 3 ? 1.5 : 0

	.level-{num}
		left (num * margin + prev_margin)em
