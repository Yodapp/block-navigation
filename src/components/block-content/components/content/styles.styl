/**
 * Content
 */

.image_container
	width 2em
	min-width 2em
	height 2em
	border-radius 50%
	overflow hidden
	margin-left 0.3em

	.separator + &
		margin-left 0.4em

	img
		object-fit cover
		width 100%
		height 100%

.separator
	flex-shrink 0

.text
	min-width 3em
	flex-shrink 1

.separator
.text
	overflow hidden
	text-overflow ellipsis
	margin-left 0.4em
