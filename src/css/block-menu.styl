/*
 * Block Menu
 */

$e_standard = cubic-bezier(0.4, 0.0, 0.2, 1)

.bn-block-menu-container

	.edit-block
	.move-up
	.move-down
	.move-to
		svg
			transform-origin center

	.edit-block svg
		transform scale(.83)
	.move-up svg
	.move-down svg
		transform scale(1.3)
	.move-to svg
		transform scale(.9)

	.copy-block_clientId
		color #40464d
		padding 8px
		text-align left
		width 100%

#bn-container

	button.toggle-block-menu
		visibility hidden
		z-index 1
		background-color var(--background_color)
		border-radius 50%
		padding 1px
		outline none
		border 1px solid var(--primary_color)
		box-shadow none
		position absolute
		top 19px
		left 19px

		svg
			width 18px
			height 18px

	button.toggle-block-menu:hover
	.is_menu_open > button.toggle-block-menu
		visibility visible
		border 1px solid var(--color_08)

	.is_menu_open > .block-header > .block-icon
		visibility hidden

	button.toggle-block-menu
	.block-icon
		transition visibility 0s .05s, border-color .1s $e_standard

	.block-header:hover
		.block-icon
		+ button.toggle-block-menu
			transition visibility 0s .3s, border-color .1s $e_standard
