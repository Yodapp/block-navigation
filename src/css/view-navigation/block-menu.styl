/*
 * Block Menu
 */

+prefix-classes('bn-')

	.menu-icon
		display flex
		margin-right 5px
		width 24px
		justify-content center

	.menu
		background-color var(--background_color)
		border 1px solid var(--color_02)
		padding 5px 0
		max-width 300px

	button.button-menu
		.menu &
			width 100%
			padding 0 14px 0 7px
			display flex
			align-items center
			line-height 3em
			transition background-color .2s $e_standard

			&:hover
				background-color var(--primary_color)

		&.is_disabled
			pointer-events none
			opacity .3
