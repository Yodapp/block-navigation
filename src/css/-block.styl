/*
 * Block Header
 */


+prefix-classes('bn-')

	.no-can_move
		cursor default

	.can_move .block-header
		// https://stackoverflow.com/a/18294634 | CC BY-SA 3.0
		cursor move // fallback if grab cursor is unsupported
		cursor grab
		cursor -moz-grab
		cursor -webkit-grab

	.block
		height 4em
		width 100%
		position relative

		::selection
			background transparent
		&:before
			content ""
			position absolute
			top 0
			// top 100%
			left 0
			width 100%
			height 100%
			background-color var(--background_color)
			z-index 1
		&:after
			content ""
			position absolute
			background-color var(--secondary_color_1)
			top 0
			right 0
			bottom 0

	// .moving_is_over.can_receive_drop
	// 	~ .block:before
	// 	&:before
	// 		content ""

	.ancestor_is_closed
		display none
