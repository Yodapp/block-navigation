/*
 * Block Header
 */


+prefix-classes('bn-')

	.block-header
		z-index 10
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		flex 1
		display flex
		align-items center
		padding-left 18px
		padding-right 7px
		line-height 4
		// overflow hidden
		border-left 1px solid var(--secondary_color_2)
		background-color var(--background_color)

		&:before
			// content ""
			position absolute
			top 0
			left -1111%
			right 0
			bottom 0
			background #111
			z-index -1

		.is_selected &
			background-color var(--primary_color)

		.level-0 &
			border-left none

		.is_moving &:before
			content normal

