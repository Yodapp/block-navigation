/*
 * Toolbar
 */

+prefix-classes('bn-')

	#bn-moving_by_click_toolbar
		padding-left 18px
		display flex
		align-items center
		position sticky
		top 50px
		z-index 2
		background var(--primary_color)
		border-top 1px solid var(--background_color)
		line-height 4em
		color var(--color_1)
		overflow hidden

	.moving.moving_type-by_click
		#bn-navigation
			animation slide_down .4s $e_standard

@keyframes slide_down {
	0% {
		z-index 3
		transform translate3d(0, -4em, 0)
	}
	100% {
		z-index 3
		transform translate3d(0, 0, 0)
	}
}
