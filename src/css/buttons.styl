/*
 * Buttons
 */

+prefix-classes('bn-')

	.menu button.button-menu
		width: 100%;
		padding: 0 14px 0 7px
		display: flex;
		align-items: center;
		line-height: 3em;

	#bn-container

		.toggle_menu
			width 24px
			display flex
			justify-content center

		.button-text
			font-size .85em
			line-height 3.2
			padding 0 10px
			text-transform uppercase
			font-weight 500
			cursor pointer

			&
			&:focus
			&:hover
				background none
				box-shadow none
				outline none
				border none

		.button-icon
			padding 0
			display flex
			align-items center
			cursor pointer

			&
			&:focus
			&:hover
				background none
				box-shadow none
				outline none
				border none

