/*
 * Logo
 */

$e_deceleration = cubic-bezier(0.0, 0.0, 0.2, 1)

.is-toggled
	#bn-pinned-logo
		&:before
			content ""
			background-color #23282b
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			z-index -1

#editor
	.bn-logo-line-1
		fill #ffa076
	.bn-logo-line-2
		fill #b8c9d0
	.bn-logo-line-3
		fill #7d7876

	.components-icon-button:hover
		.bn-logo-line-1
			fill #ffa076!important
		.bn-logo-line-2
			fill #b8c9d0!important
		.bn-logo-line-3
			fill #7d7876!important

.bn-logo-container
	width 20px
	height 20px

	&:hover
		.bn-logo-line
			transform scaleY(1.3)

	.bn-logo-line
		transition transform .2s .1s $e_deceleration

	.bn-logo-line-1
		transform-origin top center
	.bn-logo-line-2
		transform-origin center
	.bn-logo-line-3
		transform-origin bottom center
