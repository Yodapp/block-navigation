/*
 * Logo
 */

$e_deceleration = cubic-bezier(0.0, 0.0, 0.2, 1)

.is-toggled
	#bn-pinned-logo
		&:before
			content ""
			background-color #23282b
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			z-index -1

.logo-container
	width 20px
	height 20px

	&:hover
		.line-1
			transform scaleX(1.3) scaleY(1.3)
		.line-2
			transform scaleX(1.3) scaleY(1.3)
		.line-3
			transform scaleX(1.3) scaleY(1.3)

	.lines-container
		width 18px
		height 18px
		display flex
		justify-content space-between
		padding 0 3px
		margin 0

	.line
		width 2px
		height 14px
		transform scaleX(1.3)
		transition .2s .1s $e_deceleration
	.line-1
		background-color #ffa076
		transform-origin top center
	.line-2
		background-color #b8c9d0
		align-self center
	.line-3
		background-color #7d7876
		align-self flex-end
		transform-origin bottom center
