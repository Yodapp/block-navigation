/**
 * App - Logo
 */

#editor .components-icon-button:hover .bn-logo

	.bn-line-1
		fill #ffa076!important// Necessary
	.bn-line-2
		fill #b8c9d0!important// Necessary
	.bn-line-3
		fill #7d7876!important// Necessary

#editor .components-icon-button.is-toggled:hover .bn-logo rect
	fill #fff!important// Necessary

+prefix-classes('bn-')

	.logo

		#editor &

			.line-1
				fill #ffa076
			.line-2
				fill #b8c9d0
			.line-3
				fill #7d7876

		&:hover
			rect
				transform scaleY(1.3)

		rect
			transition transform .2s .1s $e_deceleration

		.line-1
			transform-origin top center
		.line-2
			transform-origin center
		.line-3
			transform-origin bottom center
