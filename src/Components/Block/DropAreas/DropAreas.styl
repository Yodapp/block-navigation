/**
 * DropAreas
 */

.container
	z-index -1

.overlay
	background-color var(--primary_color)
	position absolute
	top 0
	left 0
	right 0
	bottom 0

	~ .overlay
		background-color rgba(0,0,0,.1)

for num in (1..20)

	margin = num > 3 ? 1 : 1.5
	prev_margin = num > 3 ? 1.5 : 0

	.level-{num}
		left (num * margin + prev_margin)em
