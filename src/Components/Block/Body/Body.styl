/**
 * Block - Body
 */

.type-image
	display flex
	align-items center
	overflow hidden
	text-overflow ellipsis

.container:before
	content "|"
	margin 0 .7em

.image_container
	width 2em
	min-width 2em
	height 2em
	object-fit cover
	position relative
	border-radius 50%
	overflow hidden
	border 1px solid
	margin-right 10px

.image
	position absolute
	top 0
	left 0
	width 100%
	height 100%
