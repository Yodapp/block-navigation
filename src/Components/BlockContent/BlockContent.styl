/**
 * BlockContent
 */

+prefix-classes('bn-')

	.content_type-image
		display flex
		align-items center

	.block-content:before
		content "|"
		margin 0 .7em

	.block-image-container
		width 2em
		min-width 2em
		height 2em
		object-fit cover
		position relative
		border-radius 50%
		overflow hidden
		border 1px solid
		margin-right 10px

	img.block-image
		position absolute
		top 0
		left 0
		width 100%
		height 100%
